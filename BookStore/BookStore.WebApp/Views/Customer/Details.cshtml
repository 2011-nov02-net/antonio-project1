@model BookStore.WebApp.Models.CustomerViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>CustomerViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MyStoreLocation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MyStoreLocation)
        </dd>
    </dl>
</div>
<h3>Order History</h3>
@if (Model.Orders.Count() == 0)
{
<div>
    <p>There are no previous orders.</p>
</div>
}
else
{

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Orders.First().OrderNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders.First().TimeStamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders.First().TotalCost)
            </th>
        </tr>
    </thead>
    @foreach (var item in Model.Orders)
    {
        <tr>
            <td>
                @Html.ActionLink(item.OrderNumber.ToString(), "Details", "Order", new { id = item.OrderNumber })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeStamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCost)
            </td>
        </tr>
    }
</table>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>
