@model BookStore.WebApp.Models.StockViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Adjust Stock</h1>
<h4>@Model.Book</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" value="@Model.Quantity" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="CurrentLocationID" class="form-control" hidden value="@Model.CurrentLocationID" />
            </div>
            <div class="form-group">
                <input asp-for="ISBN" class="form-control" hidden value="@Model.ISBN" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
