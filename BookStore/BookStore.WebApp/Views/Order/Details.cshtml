@model BookStore.WebApp.Models.OrderViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeStamp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeStamp)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LocationName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LocationName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalCost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalCost)
        </dd>
    </dl>
</div>
@if (Model.Purchase != null)
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Purchase[0].BookISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purchase[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purchase[0].LineCost)
            </th>
        </tr>
    </thead>
    <tbody>

        @for (var i = 0; i < Model.Purchase.Count(); i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => Model.Purchase[i].BookISBN)
                </td>
                <td>
                    @Html.DisplayFor(model => Model.Purchase[i].Quantity)
                </td>
                <td>
                    @Html.DisplayFor(model => Model.Purchase[i].LineCost)
                </td>
            </tr>
        }
    </tbody>
</table>
        }
